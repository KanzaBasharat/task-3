extends ../layout

block content
    h3#w Add New Product
        form(action="/products/add",method="post",, id="x")
            .form-group
                label(for="name") Product Name
                input#name(type="text",class="form-control", name="name")
            .form-group
                label(for="price") Product Price
                input#price(type="text",class="form-control", name="price")
            .form-group
                label(for="Size") Size
                input#size(type="text",class="form-control", name="size")
            .form-group
                label(for="category") Category
                input#category(type="text",class="form-control", name="category")
            input(type="submit", class="btn btn-info" ,id="y")